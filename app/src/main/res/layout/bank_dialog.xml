<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bankDialogRelativeLayout"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/header"
        android:background="#59A2DC"
        android:layout_height="100dp">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_account_balance_white_24dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/header"
        android:background="@color/lavender"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/bankInfo"
            android:layout_marginRight="20dp"
            android:text="Detail Bank"
            android:fontFamily="@font/petrona"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:hint="Bank Name"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="67dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/bankIcon"
            android:src="@drawable/bank_1"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="67dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:id="@+id/copyBankName"
            android:src="@drawable/ic_content_copy_black_24dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/bankNameEt"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/bankIcon"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/black"
            android:fontFamily="@font/petrona"
            android:hint="Nama Bank"
            android:textColorHint="@color/black"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="122dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/bankAccountIcon"
            android:src="@drawable/user_2"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="122dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:id="@+id/copyAccountNumber"
            android:src="@drawable/ic_content_copy_black_24dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/bankAccountNumberEt"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@id/copyAccountNumber"
            android:layout_toRightOf="@id/bankAccountIcon"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="110dp"
            android:hint="Nomor Rekening"
            android:textColor="@color/black"
            android:fontFamily="@font/petrona"
            android:textColorHint="@color/black"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="182dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/bankIFSCIcon"
            android:src="@drawable/ifsc"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/bankPassEt"
            android:gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/bankIFSCIcon"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="170dp"
            android:hint="Password"
            android:textColor="@color/black"
            android:fontFamily="@font/petrona"
            android:textColorHint="@color/black"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="247dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/bankAddressIcon"
            android:src="@drawable/home"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="247dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:id="@+id/copyAddress"
            android:src="@drawable/ic_content_copy_black_24dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/bankAddressEt"
            android:layout_toLeftOf="@id/copyAddress"
            android:gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/bankAddressIcon"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="230dp"
            android:hint="Lokasi Pembuatan"
            android:textColor="@color/black"
            android:fontFamily="@font/petrona"
            android:textColorHint="@color/black"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDecrypt"
            android:layout_below="@id/bankAddressEt"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#176B87"
            android:text="Decrypt akun"
            android:layout_marginBottom="15dp"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</RelativeLayout>
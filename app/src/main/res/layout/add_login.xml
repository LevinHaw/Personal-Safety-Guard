<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111E2F">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:textSize="24dp"
        android:text="Kategori"
        android:textColor="@color/white"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:backgroundTint="@color/white"
        android:id="@+id/loginCategorySpinner"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="105dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/loginNameIcon"
        android:src="@drawable/name_tag"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/loginNameEt"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/loginNameIcon"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="80dp"
        android:hint="Nama Aplikasi"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:textColorHint="@color/white"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/loginEmailIcon"
        android:src="@drawable/user"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/loginEmailEt"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/loginEmailIcon"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="140dp"
        android:hint="Email atau UserName"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:textColorHint="@color/white"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/loginPasswordIcon"
        android:src="@drawable/password"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/loginPasswordEt"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/loginPasswordIcon"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="@color/white"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:inputType="textPassword"
        android:hint="Password"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="285dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/loginWebsiteIcon"
        android:src="@drawable/web"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/loginWebsiteEt"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/loginWebsiteIcon"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="260dp"
        android:hint="Website (Optional)"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:textColorHint="@color/white"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="345dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/loginNoteIcon"
        android:src="@drawable/note"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/loginNoteEt"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/loginNoteIcon"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="320dp"
        android:hint="Catatan Tambahan (Optional)"
        android:backgroundTint="@color/white"
        android:textColor="@color/white"
        android:textColorHint="@color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addLoginDetails"
        android:layout_below="@id/loginNoteEt"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/lavender"
        android:text="Tambah Detail Akun"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/generatePassword"
        android:layout_below="@id/addLoginDetails"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:backgroundTint="@color/lavender"
        android:text="Buat Password"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
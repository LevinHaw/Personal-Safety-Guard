<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111E2F">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/bankIcon"
        android:src="@drawable/bank_2"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/bankNameEt"
        android:backgroundTint="@color/white"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/bankIcon"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:hint="Nama Bank"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/bankAccountIcon"
        android:src="@drawable/user"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/bankAccountNumberEt"
        android:layout_marginRight="20dp"
        android:inputType="number"
        android:layout_toRightOf="@id/bankAccountIcon"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="80dp"
        android:hint="Nomor Rekening"
        android:backgroundTint="@color/white"
        android:textColorHint="@color/white"
        android:textColor="@color/white"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/bankIFSCIcon"
        android:src="@drawable/password"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/bankPassEt"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/bankIFSCIcon"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="140dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:backgroundTint="@color/white"
        android:textColor="@color/white"
        android:textColorHint="@color/white"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/bankAddressIcon"
        android:src="@drawable/branch"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/bankAddressEt"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/bankAddressIcon"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="200dp"
        android:hint="Lokasi Pembuatan"
        android:backgroundTint="@color/white"
        android:textColor="@color/white"
        android:textColorHint="@color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addBankDetails"
        android:layout_below="@id/bankAddressEt"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/lavender"
        android:text="Tambah Detail Bank"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#111E2F"
    tools:context=".fallSensor.Register">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:text="Registrasi"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="100dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:gravity="start"
        android:paddingStart="30dp"
        android:text="Silahkan isi kolom dibawah ini"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:gravity="start"
        android:justificationMode="inter_word"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="Note : Pastikan jika ingin mengaktifkan fitur ini. Anda harus mempunyai smartphone cadangan yang memiliki nomor berbeda"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/mobile_number_input"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:inputType="phone"
        android:ems="10"
        android:paddingStart="24dp"
        android:background="@drawable/edittext_background"
        android:layout_marginBottom="20dp"
        android:hint="Masukan nomor handphone anda"
        android:textColorHint="@color/white"/>

    <EditText
        android:id="@+id/mobile_name_input"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:inputType="text"
        android:ems="10"
        android:paddingStart="24dp"
        android:background="@drawable/edittext_background"
        android:layout_marginBottom="50dp"
        android:hint="Masukan nama handphone anda"
        android:textColorHint="@color/white"/>

    <Button
        android:id="@+id/save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:backgroundTint="@color/lavender"
        app:cornerRadius = "20dp"
        android:text="SIMPAN"/>

</LinearLayout>
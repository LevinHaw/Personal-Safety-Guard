<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="5dp"
        android:id="@+id/oldPIN"
        android:inputType="numberPassword"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:hint="Master PIN Lama"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/oldPIN"
        android:padding="5dp"
        android:id="@+id/newPIN"
        android:inputType="numberPassword"
        android:hint="PIN Baru"
        android:textColorHint="@color/white"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/confirmNewPIN"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/newPIN"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:inputType="numberPassword"
        android:gravity="center_vertical"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:hint="Konfirmasi PIN"
        android:padding="5dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_below="@id/confirmNewPIN"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:id="@+id/changeMasterPIN"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/lavender"
        android:text="Ubah  PIN"/>

</RelativeLayout>